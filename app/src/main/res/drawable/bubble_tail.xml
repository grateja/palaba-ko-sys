<?xml version="1.0" encoding="utf-8"?>
<!-- bubble_tail.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-10dp"
        android:right="-10dp"
        android:top="-20dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="#FFC107" />
            </shape>
        </rotate>
    </item>
</layer-list>
