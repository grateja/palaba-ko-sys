<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.csi.palabakosys.app.joborders.create.ui.NavigationModel" />
    </data>
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            tools:strokeColor="@color/card_selected">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_10"
                android:showDividers="middle|beginning|end"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/icon_detergent"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/textLabel"
                    tools:textColor="@color/card_selected"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.label}"
                    tools:text="SERVICES"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>