<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@{com.csi.palabakosys.model.EnumDiscountApplicable.WASH_DRY_SERVICES.toString()}"-->
<!--                android:checked="@{viewModel.discountSelected(com.csi.palabakosys.model.EnumDiscountApplicable.WASH_DRY_SERVICES)}"/>-->

<!--            <CheckBox-->
<!--                android:id="@+id/checkboxProducts"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@{com.csi.palabakosys.model.EnumDiscountApplicable.PRODUCTS_CHEMICALS.toString()}"-->
<!--                android:checked="@{viewModel.discountSelected(com.csi.palabakosys.model.EnumDiscountApplicable.PRODUCTS_CHEMICALS)}"/>-->

            <include
                android:id="@+id/controls"
                app:showDelete="@{viewModel.crudActionEnum == com.csi.palabakosys.model.CRUDActionEnum.UPDATE}"
                layout="@layout/incl_alter_controls"/>
        </LinearLayout>
    </LinearLayout>
</layout>