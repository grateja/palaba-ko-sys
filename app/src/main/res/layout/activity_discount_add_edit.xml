<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@{com.csi.palabakosys.model.EnumDiscountApplicable.TOTAL_AMOUNT.toString()}"-->
<!--                android:checked="@{viewModel.discountSelected(com.csi.palabakosys.model.EnumDiscountApplicable.TOTAL_AMOUNT)}"/>-->

<!--            <CheckBox-->
