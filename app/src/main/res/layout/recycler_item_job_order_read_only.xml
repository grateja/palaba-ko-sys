<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.csi.palabakosys.app.joborders.payment.JobOrderPaymentMinimal" />
    </data>

    <com.google.android.material.card.MaterialCardView
        app:contentPaddingLeft="24dp"
        app:contentPaddingRight="24dp"
        app:contentPaddingBottom="8dp"
        app:contentPaddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconDateCreated"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/textDateCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Jun 1 2023 6:43 AM"
                android:text="@{viewModel.createdAt}"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/iconDateCreated"
                app:layout_constraintStart_toEndOf="@id/iconDateCreated"/>
            <TextView
                style="@style/TextPrimary"
                android:id="@+id/textDiscountedAmount"
                android:peso="@{viewModel.discountedAmount}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="P 310.00"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/textJobOrderNumber"
                style="@style/JobOrderNumber"
                android:text="@{viewModel.jobOrderNumber}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="#00002"
                app:layout_constraintTop_toBottomOf="@id/textDateCreated"
                app:layout_constraintStart_toStartOf="@id/textDateCreated"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>