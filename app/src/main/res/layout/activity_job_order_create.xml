                        android:layout_height="wrap_content"
                        tools:text="Chris Pratt"/>

                    <TextView
                        style="@style/Caption.Term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date/Time::"/>
                    <TextView
                        android:id="@+id/text_created_at"
