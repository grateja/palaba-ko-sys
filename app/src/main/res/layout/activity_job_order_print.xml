<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".app.joborders.print.JobOrderPrintActivity">
    <data>
        <variable
            name="viewModel"
            type="com.csi.palabakosys.app.joborders.print.JobOrderPrintViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/jo_void"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/print_tab"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/print_tab"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_print"
                android:layout_marginBottom="16dp">
                <com.google.android.material.card.MaterialCardView
                    app:cardElevation="12dp"
                    android:id="@+id/card"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:orientation="vertical"
                        android:paddingTop="36dp">

                        <TextView
                            style="@style/Print.Double"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.shopName}"
                            android:textAlignment="center"
                            tools:text="Lagoon CTCC KEME" />

                        <TextView
                            style="@style/Print"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.address}"
                            android:textAlignment="center"
                            tools:text="Blk 1 Lot 1 Buenmar Ave Cainta Rizal" />

                        <TextView
                            style="@style/Print"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.contactInfo}"
                            android:textAlignment="center"
                            tools:text="09171790031/lagoon@csi.com" />

                        <TextView
                            style="@style/Print.Header"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{`*** ` + viewModel.selectedTab + ` ***`}"/>

                        <TextView
                            style="@style/Print"
                            android:text="@string/print_single_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_jo_details"
                            android:nestedScrollingEnabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                        <TextView
                            style="@style/Print"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/print_single_line"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_items"
                            android:nestedScrollingEnabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                        <TextView
                            style="@style/Print"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/print_single_line"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                        <TextView
                            style="@style/Print"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/print_single_line"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:visibility="@{viewModel.hasPayment}"
                            android:id="@+id/recycler_payment"
                            android:nestedScrollingEnabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                        <TextView
                            style="@style/Print"
                            android:visibility="@{viewModel.hasPayment}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/print_single_line"/>

                        <TextView
                            style="@style/Print.Header"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.disclaimer}"/>
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="16dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.core.widget.NestedScrollView>
            <Button
                android:id="@+id/button_print"
                style="@style/RoundButtonNeutral.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Continue"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>