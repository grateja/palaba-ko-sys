<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LMS2022" parent="Theme.MaterialComponents.Light">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.LMS2022.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LMS2022.NoActionBar.JobOrder" parent="Theme.LMS2022.NoActionBar">
        <item name="android:statusBarColor">@color/color_code_job_order</item>
        <item name="colorPrimary">#E44303</item>
        <item name="colorPrimaryVariant">#ED8C7B</item>
    </style>

    <style name="Theme.LMS2022.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LMS2022.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>